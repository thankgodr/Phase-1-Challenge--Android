<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyProfile">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/thirty_two"
            android:layout_height="match_parent">


          <ImageView
                  android:layout_width="@dimen/twohundred"
                  android:src="@drawable/pic"
                  android:padding="1dp"
                  android:background="@drawable/ic_launcher_background"
                  android:layout_gravity="center_horizontal"
                  android:layout_height="@dimen/twohundred"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/fullname"
                android:padding="8dp"
                android:layout_height="wrap_content"/>

        <View android:layout_width="match_parent"
              android:background="@android:color/black"
              android:layout_height="2dp"/>


        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_vertical_margin"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginBottom="40dp"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="0.5"
                            android:text="@string/track"
                            android:textSize="24sp"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:textSize="24sp"
                            android:text="@string/android"
                            android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginBottom="40dp"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="0.5"
                            android:text="@string/country"
                            android:textSize="24sp"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:textSize="24sp"
                            android:text="@string/nigeria"
                            android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginBottom="40dp"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="0.5"
                            android:text="@string/email"
                            android:textSize="24sp"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:textSize="24sp"
                            android:text="@string/mymail"
                            android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_marginBottom="40dp"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="0.5"
                            android:text="@string/phoneNoTxt"
                            android:textSize="24sp"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:textSize="24sp"
                            android:text="@string/phoneNo"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="0.5"
                            android:text="@string/slacktxt"
                            android:textSize="24sp"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:textSize="24sp"
                            android:text="@string/slack"
                            android:layout_height="wrap_content"/>

                </LinearLayout>




            </LinearLayout>
        </ScrollView>




    </LinearLayout>

</android.support.constraint.ConstraintLayout>